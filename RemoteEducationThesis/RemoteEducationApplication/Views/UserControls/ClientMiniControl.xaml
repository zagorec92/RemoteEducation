<base:UserControlBase x:Class="RemoteEducationApplication.Views.UserControls.ClientMiniControl"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:base="clr-namespace:RemoteEducationApplication.Shared"
                      xmlns:wBar="clr-namespace:RemoteEducationApplication.Views.UserControls"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:local="clr-namespace:RemoteEducationApplication.Views.UserControls"
                      mc:Ignorable="d" 
                      d:DesignHeight="50" d:DesignWidth="245"
                      Background="#EEE"
                      Tag="{Binding ID}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="{Binding Name}"
                   Foreground="{StaticResource LightBlackBrush}"
                   HorizontalAlignment="Left"
                   Margin="5, 0, 0, 0"
                   VerticalAlignment="Center"
                   FontSize="{StaticResource MediumFont}"/>
        
        <wBar:ApplicationBar Grid.Column="1"
                             WindowRole="ApplicationBar"
                             MinimizeIconVisibility="Hidden"
                             WindowBarClick="ApplicationBar_WindowBarClick"/>
        
        
    </Grid>
</base:UserControlBase>
