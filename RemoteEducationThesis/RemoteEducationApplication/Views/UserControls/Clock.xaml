<base:WpfUserControl x:Class="Education.Application.Views.UserControls.Clock"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:base="clr-namespace:WPFFramework.App.Base;assembly=WPFFramework"
                     Style="{StaticResource ClockControlStyle}">
    <Grid>
        <TextBlock Text="{Binding Time}" 
                   Style="{StaticResource ClockControlTextBlockStyle}"/>
    </Grid>
</base:WpfUserControl>
