<UserControl x:Class="RemoteEducationApplication.Views.UserControls.ClientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:appBar="clr-namespace:RemoteEducationApplication.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="175"
             Background="White"
             BorderThickness="3"
             BorderBrush="{StaticResource LightBlackBrush}"
             Height="200"
             Width="175">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid Background="{StaticResource LightBlackBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="tbkName" 
                       Foreground="{StaticResource BetterWhiteBrush}" 
                       Text="{Binding Name}" />
            
            <appBar:ApplicationBar Grid.Column="1"
                                   x:Name="appBar"
                                   IsMainWindowAppBar="False"/>
        </Grid>
        
        <Image Grid.Row="1" />
        
    </Grid>
</UserControl>
