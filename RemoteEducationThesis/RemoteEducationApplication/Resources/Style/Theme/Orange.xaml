<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Background-->
    <SolidColorBrush x:Key="BackgroundBrush" x:Shared="False" Color="{Binding Source={StaticResource CustomOrangeWin8Brush}, Path=Color}" />

    <!--Foreground-->
    <SolidColorBrush x:Key="ForegroundBrush" Color="{Binding Source={StaticResource LightBlackBrush}, Path=Color}" />

    <!--Validation-->
    <SolidColorBrush x:Key="ValidationBrush" Color="#EF0000" />

    <!--ApplicationMenuHover-->
    <SolidColorBrush x:Key="ApplicationMenuHoverBrush" Color="{Binding Source={StaticResource BetterWhiteBrush}, Path=Color}" />

    <!--Menu hover-->
    <SolidColorBrush x:Key="MenuHoverBrush" Color="{Binding Source={StaticResource BetterWhiteBrush}, Path=Color}" />

    <!--Submenu hover-->
    <SolidColorBrush x:Key="SubMenuHoverBrush" Color="{Binding Source={StaticResource DarkOrangeWin8Brush}, Path=Color}" />

    <!--Submenu background-->
    <SolidColorBrush x:Key="SubMenuBackgroundBrush" Color="{Binding Source={StaticResource CustomOrangeWin8Brush}, Path=Color}" />

    <!--button hover-->
    <SolidColorBrush x:Key="ButtonHoverBrush" x:Shared="False" Color="{Binding Source={StaticResource SubMenuHoverBrush}, Path=Color}" />
    
</ResourceDictionary>