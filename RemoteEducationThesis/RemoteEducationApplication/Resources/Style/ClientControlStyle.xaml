<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">   
    
    <Style x:Key="UserControlWindowStyle" TargetType="UserControl">
        <Setter Property="Height" Value="200" />
        <Setter Property="Width" Value="175" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="BorderBrush" Value="{StaticResource LightBlackBrush}" />
    </Style>
    
    <Style x:Key="UserControlTextBoxNameStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BetterWhiteBrush}" />
        <Setter Property="Margin" Value="7.5, 0, 0, 0" />
    </Style> 
</ResourceDictionary>